    <!-- Scripts -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // --- ANIMAÇÃO DO TÍTULO ---
            function startAnimation() {
                document.body.classList.add('loaded');
                const characters = document.querySelectorAll('.animate_characters-character');
                characters.forEach((char, index) => {
                    char.style.transitionDelay = (index * 0.025) + 's';
                });
            }
            setTimeout(startAnimation, 100);

            // --- LÓGICA DO MODAL DE EMAIL ---
            const emailLink = document.getElementById('emailLink');
            const emailModal = document.getElementById('emailModal');
            const copyButton = document.getElementById('copyButton');
            const emailAddress = document.getElementById('emailAddress').innerText;

            emailLink.addEventListener('click', () => {
                emailModal.classList.add('visible');
            });

            // Fecha o modal se clicar fora dele
            document.addEventListener('click', function(event) {
                if (!emailModal.contains(event.target) && event.target !== emailLink) {
                    emailModal.classList.remove('visible');
                }
            });

            copyButton.addEventListener('click', () => {
                // Cria um elemento de texto temporário para copiar
                const tempInput = document.createElement('textarea');
                tempInput.value = emailAddress;
                document.body.appendChild(tempInput);
                tempInput.select();
                document.execCommand('copy');
                document.body.removeChild(tempInput);

                // Feedback visual para o usuário
                copyButton.innerText = 'Copiado!';
                setTimeout(() => {
                    copyButton.innerText = 'Copiar';
                }, 2000);
            });
        });
    </script>
